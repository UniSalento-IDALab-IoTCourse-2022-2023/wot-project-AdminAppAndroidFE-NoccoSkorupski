<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NuovoBeaconActivity">

        <!-- Form -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="719dp"
            android:layout_height="87dp"
            android:fontFamily="sans-serif-medium"
            android:text="Compila i seguenti campi, dove vuoi posizionare il tuo nuovo beacon?"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="#B30000"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/idStanza" />

        <LinearLayout
            android:layout_width="755dp"
            android:layout_height="631dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintVertical_bias="0.129">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome della stanza:" />

            <!-- EditText per il nome della stanza -->
            <EditText
                android:id="@+id/nomeStanza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="nome stanza" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero della stanza:" />

            <!-- EditText per il numero della stanza -->
            <EditText
                android:id="@+id/idStanza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="numero stanza"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Piano:" />

            <!-- EditText per il piano -->
            <EditText
                android:id="@+id/piano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="piano"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero del reparto:" />

            <!-- EditText per il numero del reparto -->
            <EditText
                android:id="@+id/idReparto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="numero reparto"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome del reparto:" />

            <!-- EditText per il nome del reparto -->
            <EditText
                android:id="@+id/nomeReparto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="reparto"
                android:inputType="textEmailAddress" />
            <!-- Pulsante per aggiungere il beacon -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#B30000"
                android:onClick="submitForm"
                android:text="AGGIUNGI"
                app:backgroundTint="#BC0000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="253dp"
                android:orientation="horizontal">

                <!-- Immagine -->

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="509dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Perfavore allontanati dagli altri beacons giÃ  configurati e posiziona vicino al dispositivo solo il beacon che desideri aggiungere."
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="170dp"
                    android:layout_height="264dp"
                    android:src="@mipmap/beaconvicino"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.408"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView1" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>